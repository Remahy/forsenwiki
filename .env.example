# Prisma
POSTGRES_PASSWORD=
DATABASE_URL=postgres://postgres:${POSTGRES_PASSWORD}@db:5432/forsenwiki

DOMAIN="localhost"
CADDY_HTTP_PORT="5080" # Or 80.
CADDY_PORT="5443" # Or 443.

AUTH_URL="https://${DOMAIN}:${CADDY_PORT}/auth"
AUTH_SECRET=

# Twitch Auth provider
AUTH_TWITCH_ID=
AUTH_TWITCH_SECRET=

# Harbor Auth provider
# AUTH_HARBOR

# Absolute path for uploaded user content directory, this is the directory Svelte will save to.
STATIC_DIR="/usercontent"
# Make sure this exists, as docker will mount this into the services.
DEV_STATIC_DIR="/home/user/code/forsenwiki/usercontent"

ORIGIN="https://${DOMAIN}:${CADDY_PORT}"
VITE_DOMAIN="https://${DOMAIN}:${CADDY_PORT}"
VITE_STATIC_DOMAIN="https://${DOMAIN}:${CADDY_PORT}/usercontent"

# Cloudflare cache invalidation
CLOUDFLARE_API_TOKEN=
CLOUDFLARE_ZONE_ID=
