		"eslint": "^9.25.0",
		"eslint-config-prettier": "^10.1.2",
		"eslint-plugin-svelte": "^3.5.1",
		"marked": "^15.0.8",
		"marked-gfm-heading-id": "^4.1.1",
		"postcss": "^8.5.3",
		"postcss-load-config": "^6.0.1",
